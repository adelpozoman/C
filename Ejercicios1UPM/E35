#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
/*ejercicio35 */
main(){
	int n;
	puts("Introduce un número\n");
	do{	while(scanf("%i",&n)!=1||getchar()!='\n'||n<0){puts("Puede ser que no hayas puesto un número");fflush(stdin);}
		printf("Has elegido %i\n", n);
	}while(1);
return EXIT_SUCCESS;}
